<div class="col-xs-12 flex-column">
  <div class="panel panel-default devise-bs">
    <div class="panel-body">
      <%= form_for(@profile, url: profile_path(@profile)  ) do |f| %>

        <% if @profile.errors.any? %>
          <ul>
          <% @profile.errors.full_messages.each do |msg| %>
            <li><%= msg.to_s %> </li>
          <% end %>
          </ul>
        <% end %>
        <div class="form-group">
          <p><%= f.label :name %></p>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <p style="display:block"><%= f.label :last_name %></p>
          <%= f.text_field :last_name %>
        </div>
        <div class="form-group">
          <p style="display:block"><%= f.label :rol %></p>
          <%= f.text_field :rol %><br>
        </div>

        <div class="form-group">
          <p style="display:block"><%= f.label :salary %></p>
          <%= f.number_field :salary %>
        </div>
        <div class="col-12 flex">
          <%= f.submit class: 'btn btn-yummi' %>
        </div>

      <% end %>
    </div>
  </div>
</div>
