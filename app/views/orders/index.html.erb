<div class="col-xs-12">
  <h2 class="txt-undeline">Orders</h2>
  <hr>

  <!-- <%= link_to 'Nuevo', new_order_path if user_signed_in? %> -->
  <div class="cont-create-btn"><%= button_to "create new order", new_order_path, :method => "get", class: 'btn btn-yummi-outline' %>  </div>

  <!-- <%=  @orders.inspect  %></p> -->
  <table class="table">
    <thead>
      <tr>
        <th>id</th>
        <th>Employee</th>
        <th>Table</th>
        <th>Order detail</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.profile.name.to_s + " " +order.profile.last_name.to_s %></td>
        <td><%= order.board %></td>
        <td>
          <%= link_to order_path(order) do %>
              <i class="fas fa-eye icon-crud"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_order_path(order) do %>
              <i class="fas fa-edit icon-crud"></i>
          <% end %>
        </td>
        <td><%= link_to "X", order_path(order), method: :delete,  data: {confirm: 'Â¿Are you sure?'}, class: 'red-icon' %></td>
      </tr>
    </tbody>
    <%end%>
  </table>

</div>
