<div class="col-xs-12 flex-column">
  <div class="panel panel-default devise-bs">
    <div class="panel-body">
      <%= form_for(@order) do |f| %>

        <% if @order.errors.any? %>
          <ul>
            <% @order.errors.full_messages.each do |msg| %>
              <li> <%= msg.to_s %> </li>
            <% end%>
          </ul>
        <% end %>
        <div class="form-group">
          <%= f.label :board %>
          <%= f.text_field :board %>
        </div>
        <div class="form-group">
          <%= f.label :user_id %>
          <%= collection_select(:order, :user_id, User.all, :id, :email, prompt: true) %>
        <div>
        <div class="col-12 cont_order_btn-f flex">
          <%= f.submit class: 'btn btn-yummi' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
