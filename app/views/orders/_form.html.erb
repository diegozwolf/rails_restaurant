<%= form_for(@order) do |f| %>

    <% if @order.errors.any? %>
        <ul>
          <% @order.errors.full_messages.each do |msg|%>
          <li><%= msg.to_s%></li>
        </ul>
        <% end %>
    <% end %>

    <%= f.label :board %>
    <%= f.text_field :board %>
    <br>
    
    <%= f.label :user %>
    <%= collection_select(:order, :user_id, User.all, :id,:email, prompt: true) %>

    <%= f.submit %>
<% end %>
