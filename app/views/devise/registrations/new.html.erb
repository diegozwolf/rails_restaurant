<div class="col-xs-8">
  <div class="logo-cont flex"><i class="fas fa-utensils logo-image"></i></i></div>
  <%= bootstrap_devise_error_messages! %>
  <div class="panel dashed-panel devise-bs">
    <div class="panel-heading">
      <h4><%= t('.sign_up', default: 'Sign up') %></h4>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'label-sign'%>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, class: 'label-sign' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: 'label-sign' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-login' %>
      <% end %>
    </div>
  </div>
  <%= render 'devise/shared/links' %>
</div>
