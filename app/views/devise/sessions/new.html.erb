<div class="col-xs-8">
  <div class="logo-cont flex"><i class="fas fa-utensils logo-image"></i></i></div>
  <div class="panel dashed-panel devise-bs">
    <div class="panel-heading">
      <h4><%= t('.sign_in', default: 'Carever') %></h4>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'label-sign' %>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, class: 'label-sign' %>
        <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="checkbox flex-row">
        <%= f.label :remember_me, class: 'label-sign'  do %>
        <%= f.check_box :remember_me, class:'check-box' %> <%= t('.remember_me', default: 'Remember me') %>
        <% end %>
      </div>
      <% end %>
      <%= f.submit  t('.sign_in', default: 'Sign in'), class: 'btn btn-login' %>
      <% end %>
    </div>
  </div>
  <%= render 'devise/shared/links' %>

</div>
